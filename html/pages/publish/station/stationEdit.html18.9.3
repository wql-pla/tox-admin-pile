        $.ajax({
                type: "post",
                async: false,
                url: ajaxUrl + '/station/editStationById',
                data: JSON.stringify(data),
                dataType: 'json',
                contentType: 'application/json',
            })
            .done(function(res) {
                // console.log(res);
                if (Boolean(res.result) == true) {
                    utils._msg('操作成功', function() {
                        parent.window.location.reload(true);
