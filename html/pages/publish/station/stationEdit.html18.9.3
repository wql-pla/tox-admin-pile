    <script>
    var stationid = utils.GetUrlpara('id');
    var personOrCommon = 2; //默认普通车位东
    //仅交流---个人车位东-->>个人服务费
    var L_AC_personServiceAmountItem = $('#L_AC_personServiceAmountItem').detach();
    //交直流---个人车位东-->>个人服务费
    var L_AC_DC_personServiceAmountItem = $('#L_AC_DC_personServiceAmountItem').detach();

    var L_AC_DC = $('#L_AC_DC').detach(); //交直流

    (stationid != null) && detail();


    /*
        普通、个人车位东
     */
    form.on('select(personType)', function(data) {
        personOrCommon = data.value;
        renderPersonService(personOrCommon);
    })
    /*
        桩站类型
     */
    form.on('select(isDirect)', function(data) {
        var value = data.value;
        render_AC_DC(value);
        //个车--普车
        renderPersonService(personOrCommon);
    })

    $('#L_basicChargeAmount').on('input', function() {
        count();
    });
    $('#L_serviceChargeAmount').on('input', function() {
        count();
    });

    laydate.render({
        elem: '#L_planUseTime',
    });
    //
    //查询电桩信息
    laydate.render({
        elem: '#startDate',
        done: function(value, date, endDate) {
            utils._loading(function() {
                detail(utils.checkDate(value), '');
            }, '正在查询电桩信息...');
        }
    });
    laydate.render({
        elem: '#endDate',
        done: function(value, date, endDate) {
            utils._loading(function() {
                detail('', utils.checkDate(value));
            }, '正在查询电桩信息...');
        }
    });

    form.verify({
        point: function(val) {
            var flag = false;
            if (val.indexOf(',') != -1) {
                var arr = val.split(',');
                if (arr.length == 2)
                    for (var i = 0; i < arr.length; i++) {
                        if (!/^-?\d+$|^(-?\d+)(\.\d+)?$/.test(arr[i])) flag = true;
                    }
                else
                    flag = true;
            } else {
                flag = true;
            }
            if (flag) return '坐标格式采用 “经度,纬度” 格式，请检查格式是否正确且不能包含中文逗号';
        },
        phone: [/^\d{11}$/, '手机必须11位，只能是数字！'],
        percent: [/^((\d|[1-9]\d|100)|(([1]\.\d{1,2}|[1-9][0-9]*\.\d{1,2})))$/, '请输入1~100的百分比，最多保留两位小数']
    });

    //监听提交
    form.on('submit(save)', function(data) {
        data.field.id = stationid;
        editStation(data.field);
        return false;
    });
    /*
        个人车位东、普通车位东切换
     */
    function renderPersonService(val) {
        if (Number(val) == 1) {
            //个人车位东1
            $('#L_AC_personServiceAmountContainer').html(L_AC_personServiceAmountItem);
            $('#L_AC_DC_personServiceAmountContainer').html(L_AC_DC_personServiceAmountItem);
        } else if (Number(val) == 2) {
            //普通车位东2
            $('#L_AC_personServiceAmountContainer').html('');
            $('#L_AC_DC_personServiceAmountContainer').html('');
        }
    }

    function render_AC_DC(value) {
        if (Number(value) == 0) {
            //仅交流模板
            $('#L_AC_DC').detach();
        } else if (Number(value) == 1) {
            //交直流模板
            $('#L_AC_DC_CONTENT').append(L_AC_DC);
        }
    }
    /*
        详情
     */
    function detail(startDate = '', endDate = '') {
        var data = {
            id: stationid,
            startDate: startDate,
            endDate: endDate,
        };
        $.ajax({
                async: false,
                url: ajaxUrl + '/station/selectStationById',
                type: 'POST',
                dataType: 'json',
                contentType: 'application/json',
                data: JSON.stringify(data),
            })
            .done(function(res) {
                var ret = res.data.station;
                // console.log(ret);
                $('#L_stationName').val(ret.stationName);
                $('#distpicker').distpicker({
                    province: ret.province,
                    city: ret.city,
                    district: ret.region
                });
                getStore("#L_store", res.data.stores, ret.storeId);

                if (ret.coord == null || ret.coord == '') {
                    $('#L_marker').val('');
                } else {
                    $('#L_marker').val(ret.coord.split(',')[0] + "," + ret.coord.split(',')[1]);
                }
                // 
                $('#L_personName').val(ret.personName);
                $('#L_personPhone').val(ret.personPhone);
                //
                if (ret.personType !== null && ret.personType !== 'null' && Number(ret.personType) == 1) {
                    personOrCommon = 1; //
                    //个人车位东1
                    $('#L_personType').find('option[value="' + ret.personType + '"]').prop('selected', true);
                    //仅交流时
                    $('#L_AC_personServiceAmountContainer').html(L_AC_personServiceAmountItem);
                    $('#L_AC_personServiceAmount').val(ret.personServiceAmount);
                }

                if (ret.isDirect !== null && ret.isDirect !== 'null' && Number(ret.isDirect) == 1) {
                    /*
                        交直流
                     */
                    $('#L_stationType').find('option[value="' + ret.isDirect + '"]').prop('selected', true);
                    $('#L_AC_DC_CONTENT').append(L_AC_DC);
                    $('#L_directBasicChargeAmout').val(ret.directBasicChargeAmout);
                    $('#L_directServiceChargeAmount').val(ret.directServiceChargeAmount);
                    $('#L_directThirdServiceAmount').val(ret.directThirdServiceAmount);
                    //个人车位东时
                    (Number(ret.personType) == 1) && $('#L_AC_DC_personServiceAmountContainer').html(L_AC_DC_personServiceAmountItem), $('#L_directPersonServiceAmout').val(ret.directPersonServiceAmout);
                }

                //仅交流或交直流
                $('#L_basicChargeAmount').val(ret.basicChargeAmount);
                $('#L_serviceChargeAmount').val(ret.serviceChargeAmount);
                $('#L_thirdServiceAmount').val(ret.thirdServiceAmount);

                $('#L_totalAmount').text(Number(ret.basicChargeAmount * 1 + ret.serviceChargeAmount * 1).toFixed(2));

                $('#L_pileCount').val(res.data.pileCount);
                $('#L_ds').val(res.data.ds);

                //建设中
                if (Number(ret.status) != 2) {
                    $('#L_planContainer').detach();
                } else {
                    $('#L_DCNum').val(ret.acnum);
                    $('#L_ACNum').val(ret.dcnum);
                    $('#L_planUseTime').val(utils.formatDate(ret.planUseTime, 1));
                }
                form.render('select');
            })
            .fail(function(err) {
                console.log(err);
            })
    }
    //编辑
