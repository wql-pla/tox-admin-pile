    <!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
    <!--[if lt IE 9]>
      <script src="https://cdn.staticfile.org/html5shiv/r29/html5.min.js"></script>
      <script src="https://cdn.staticfile.org/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script>
    //预计运营时间
    laydate.render({
        elem: '#L_planUseTime',
    });

    $('#distpicker').distpicker({
        province: '天津市',
        city: '天津市市辖区',
        district: '和平区',
    });

    //获取门店信息
    utils.selTemplate('#L_store', 0, 5);

    //仅交流---个人车位东-->>个人服务费
    var L_AC_personServiceAmountItem = $('#L_AC_personServiceAmountItem').detach();
    //交直流---个人车位东-->>个人服务费
    var L_AC_DC_personServiceAmountItem = $('#L_AC_DC_personServiceAmountItem').detach();

    var personOrCommon = 2; //默认普通车位东

    form.on('select(personType)', function(data) {
        personOrCommon = data.value;
        renderPersonService(personOrCommon);
    });

    /*
        桩站类型
     */
    var L_AC_DC = $('#L_AC_DC').detach();
    form.on('select(isDirect)', function(data) {
        var value = data.value;
        if (Number(value) == 0) {
            //仅交流模板
            $('#L_AC_DC').detach();
        } else if (Number(value) == 1) {
            //交直流模板
            $('#L_AC_DC_CONTENT').append(L_AC_DC);
        }
        renderPersonService(personOrCommon);
    })

    /*
        表单验证
     */
    form.verify({
        point: function(val) {
            var flag = false;
            if (val.indexOf(',') != -1) {
                var arr = val.split(',');
                if (arr.length == 2)
                    for (var i = 0; i < arr.length; i++) {
                        if (!/^-?\d+$|^(-?\d+)(\.\d+)?$/.test(arr[i])) flag = true;
                    }
                else
                    flag = true;
            } else {
                flag = true;
            }
            if (flag) return '坐标格式采用 “经度,纬度” 格式，请检查格式是否正确且不能包含中文逗号';
        },
        phone: [/^\d{11}$/, '手机必须11位，只能是数字！'],
        percent: [/^((\d|[1-9]\d|100)|(([1]\.\d{1,2}|[1-9][0-9]*\.\d{1,2})))$/, '请输入1~100的百分比，最多保留两位小数']
    });

    //监听提交
    form.on('submit(save)', function(data) {
        // console.log(data.field)
        addStation(data.field);
        return false;
    });

    /*
        个人车位东、普通车位东切换
     */
    function renderPersonService(val) {
        if (Number(val) == 1) {
            //个人车位东1
            $('#L_AC_personServiceAmountContainer').html(L_AC_personServiceAmountItem);
            $('#L_AC_DC_personServiceAmountContainer').html(L_AC_DC_personServiceAmountItem);
        } else if (Number(val) == 2) {
            //普通车位东2
            $('#L_AC_personServiceAmountContainer').html('');
            $('#L_AC_DC_personServiceAmountContainer').html('');
        }
    }
    //新增
    function addStation(data) {
        $.ajax({
                type: "post",
                async: false,
                url: ajaxUrl + '/station/insertStation',
                data: JSON.stringify(data),
                dataType: 'json',
                contentType: 'application/json',
            })
            .done(function(res) {
                // console.log(res);
                if (Boolean(res.result) == true) {
                    utils._msg('操作成功', function() {
                        parent.window.location.reload(true);
                    })
                } else {
                    layer.alert(res.msg, {
                        shift: 6 //shake
                    });
                }
            })
            .fail(function(err) {
                console.log(err);
            })
    }

    //查看地图
    function chooseMarker() {
        var latlng = $('#L_marker').val();
        var province = utils.isUndefined($('#L_province').next('.layui-form-select').find('.layui-this').attr('lay-value'));
        var city = utils.isUndefined($('#L_city').next('.layui-form-select').find('.layui-this').attr('lay-value'));
        utils._open('选择坐标', './map.html?latlng=' + latlng + '&province=' + utils.compileStr(province) + '&city=' + utils.compileStr(city), 100, 100);
    }
    </script>
