                                        <div class="layui-input-inline">
                                            <input type="text" id="L_serviceChargeAmount" name="serviceChargeAmount" autocomplete="off" class="layui-input">
                                        </div>
                                        <label class="x-label">
                                            元/度
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <div class="layui-col-md6">
                                    <div class="layui-inline">
                                        <label for="L_thirdServiceAmount" class="layui-form-label">
                                            分润服务费
                                        </label>
                                        <div class="layui-input-inline">
                                            <input type="text" id="L_thirdServiceAmount" name="thirdServiceAmount" autocomplete="off" class="layui-input" placeholder="1~100的数字,最多保留两位小数">
                                        </div>
                                        <label class="x-label">
                                            %
                                        </label>
                                    </div>
                                </div>
                                <div class="layui-col-md6" id="L_AC_personServiceAmountContainer">
                                    <div class="layui-inline" id="L_AC_personServiceAmountItem">
                                        <label for="L_personServiceAmount" class="layui-form-label">
                                            个人服务费
                                        </label>
                                        <div class="layui-input-inline">
                                            <input type="text" id="L_personServiceAmount" name="personServiceAmount" autocomplete="off" class="layui-input">
                                        </div>
                                        <label class="x-label">
