<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>订单管理</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,user-scalable=yes, minimum-scale=0.4, initial-scale=0.8" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="../../../css/font.css">
    <link rel="stylesheet" href="../../../css/xadmin.css">
</head>

<body>
    <div class="x-body">
        <blockquote class="layui-elem-quote">
            <h1>订单管理</h1>
        </blockquote>
        <fieldset class="layui-elem-field">
            <legend>查询功能区</legend>
            <div class="layui-field-box">
                <div class="layui-row">
                    <form class="layui-form x-so">
                        <div class="layui-form-item">
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">电话</label>
                                    <div class="layui-input-inline">
                                        <input type="text" name="phone" class="layui-input">
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">桩号</label>
                                    <div class="layui-input-inline">
                                        <input type="text" name="pileNum" class="layui-input">
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">订单号</label>
                                    <div class="layui-input-inline">
                                        <input type="text" name="orderId" class="layui-input">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">所属城市</label>
                                    <div class="layui-input-inline">
                                        <select name="city" lay-search="" lay-filter="city" id="city"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">所属桩站</label>
                                    <div class="layui-input-inline">
                                        <select name="stationName" lay-search="" lay-filter="stationName" id="stationName"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">所属门店</label>
                                    <div class="layui-input-inline">
                                        <select name="storeName" lay-search="" lay-filter="storeName" id="storeName"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">订单类型</label>
                                    <div class="layui-input-inline">
                                        <select name="type" lay-search="" lay-filter="type" id="orderType">
                                            <option value="">请输入或选择</option>
                                            <option value="1">内部人员</option>
                                            <option value="2">普通用户</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">起始时间</label>
                                    <div class="layui-input-inline">
                                        <input type="text" name="startDate" class="layui-input" id="startDate" placeholder="yyyy-MM-dd HH:mm:ss">
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">结束时间</label>
                                    <div class="layui-input-inline">
                                        <input type="text" name="endDate" class="layui-input" id="endDate" placeholder="yyyy-MM-dd HH:mm:ss">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">电桩上线时间</label>
                                    <div class="layui-input-inline">
                                        <input type="text" name="onLineDate" class="layui-input" id="onLineDate" placeholder="yyyy-MM-dd">
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <label class="layui-form-label">充电状态</label>
                                    <div class="layui-input-inline">
                                        <select name="status" lay-search="" lay-filter="chargeStatus" id="chargeStatus">
                                            <option value="">请输入或选择</option>
                                            <option value="0">充电完成</option>
                                            <option value="1">正在充电</option>
                                            <option value="2">开启失败</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-inline">
                                    <button type="button" title="搜索" lay-filter="search" lay-submit="" class="layui-btn"><i class="layui-icon">&#xe615;</i>搜索</button>
                                    <button type="reset" title="重置" class="layui-btn layui-btn-primary"><i class="layui-icon">&#xe631;</i>重置</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </fieldset>
        <fieldset class="layui-elem-field">
            <legend>订单列表</legend>
            <div class="layui-field-box">
                <button class="layui-btn" title="导出到EXCEL" onclick="table2excel()"><i class="layui-icon">&#xe601;</i>导出</button>
                <div class="layui-inline">
                    <label class="x-label-text">总度数</label>
                    <input type="text" name="totalElec" class="x-input x-red" readonly>
                    <label class="x-label-text">度</label>
                </div>
                <div class="layui-inline">
                    <label class="x-label-text">总金额</label>
                    <input type="text" name="totalMoney" class="x-input x-red" readonly>
                    <label class="x-label-text">元</label>
                </div>
                <div class="layui-form">
                    <table class="layui-table" id="table" lay-even>
                        <thead>
                            <tr>
                                <td>序号</td>
                                <td>订单号</td>
                                <td>所属城市</td>
                                <td>所属桩站</td>
                                <td>桩号</td>
                                <td>电话</td>
                                <td>电桩上线时间</td>
                                <td>开始时间</td>
                                <td>结束时间</td>
                                <td>应付金额</td>
                                <td>实付金额</td>
                                <td>充电度数</td>
                                <td>充电状态</td>
                                <td class="noExl">操作</td>
                            </tr>
                        </thead>
                        <tbody id="tbody">
                        </tbody>
                    </table>
                    <div id="pageWrap"></div>
                </div>
            </div>
        </fieldset>
    </div>
    <script type="text/javascript" src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="../../../lib/layui/layui.all.js" charset="utf-8"></script>
    <script type="text/javascript" src="../../../lib/table2excel/jquery.table2excel.min.js"></script>
    <script type="text/javascript" src="../../../js/public.js"></script>
    <script type="text/javascript">
    //日期时间选择器
    laydate.render({
        elem: '#startDate',
        type: 'datetime'

    });
    laydate.render({
        elem: '#endDate',
        type: 'datetime'
    });
    laydate.render({
        elem: '#onLineDate',
    });

    //获取门店信息
    utils.selTemplate('#storeName', 0, 0);
    //获取桩站信息
    utils.selTemplate('#stationName', 2, 3);
    //获取城市信息
    utils.selTemplate('#city', 3, 4);

    var total = "";

    function getList(data) {
        var pageNum = data.pageNum,
            pageSize = data.pageSize;
        $.ajax({
            type: "post",
            async: false,
            url: ajaxUrl + '/order/selectOrdersPages',
            data: JSON.stringify(data),
            dataType: 'json',
            contentType: 'application/json',
            success: function(res) {
                // console.log(res);
                if (Number(res.result) == -1) {
                    utils._alert('暂无权限查看订单相关信息，请重新登录', function() {
                        window.top.location = '../../../login.html';
                    })
                    return;
                } else {
                    $('input[name=totalElec]').val(res.data.elec);
                    $('input[name=totalMoney]').val(res.data.sum);
                    total = res.data.pageView.total;
                    var data = res.data.pageView.list;
                    var s = "";
                    $.each(data, function(v, o) {
                        s += '<tr><td>' + (v + 1 + pageSize * pageNum) + '</td>';
                        s += '<td>' + utils.isNull(o.id) + '</td>';
                        s += '<td>' + utils.splice(o.city) + '</td>';
                        s += '<td>' + utils.isNull(o.stationName) + '</td>';
                        s += '<td>&nbsp;' + utils.isNull(o.pileNum) + '</td>';
                        s += '<td>' + utils.isNull(o.phone) + '</td>';
                        s += '<td>' + utils.formatDate(utils.checkDate(o.pile.onlineDate), 1) + '</td>';
                        s += '<td>' + utils.isNull(o.createTime) + '</td>';
                        s += '<td>' + utils.isNull(o.endTime) + '</td>';
                        s += '<td>' + isCoupon(o) + '</td>';
                        s += '<td>' + utils.fillZero(o.realAmount) + '</td>';
                        s += '<td>' + utils.fillZero(o.realCount) + '</td>';
                        s += '<td>' + utils.getJson('chargeStatus', o.status) + '</td>';
                        s += '<td class="noExl">';
                        s += '<button type="button" class="layui-btn layui-btn-mini"  onclick="utils._open(\'详情\',\'./orderDetail.html?id=' + o.id + '\',100,100)"><i class="layui-icon">&#xe642;</i>查看</button>';
                        if (o.status == 1) {
                            s += '<button type="button" class="layui-btn layui-btn-mini" onclick="closeOrder(' + o.id + ');"><i class="layui-icon">&#x1006;</i>关闭</button>'
                        }
                        s += '</td></tr>';
                    });
                    if (data.length > 0) {
                        $("#tbody").html(s);
                    } else {
                        $("#tbody").html("<tr style='width:100%;'><td colspan='" + $('thead td').length + "' align='center'>暂无数据</td></tr>");
                    }
                }
            },
            error: function(err) {
                console.log(err);
            }
        });
    }

    function initList(pageSize) {
        var mydata = {
            pageNum: 0,
            pageSize: pageSize || $('.layui-laypage-limits').children('input').val(),
            phone: $('input[name=phone]').val().trim(),
            pileNum: $('input[name=pileNum]').val().trim(),
            id: $('input[name=orderId]').val().trim(),
            city: utils.isUndefined($('#city').next('.layui-form-select').find('.layui-this').attr('lay-value')),
            stationName: $('#stationName').next('.layui-form-select').find('.layui-this').text(),
            storeName: $('#storeName').next('.layui-form-select').find('.layui-this').text(),
            type: utils.isUndefined($('#orderType').next('.layui-form-select').find('.layui-this').attr('lay-value')),
            startDate: utils.checkDate($('input[name=startDate]').val().trim()),
            endDate: utils.checkDate($('input[name=endDate]').val().trim()),
            onLineDate: utils.checkDate($('input[name=onLineDate]').val().trim()),
            status: utils.isUndefined($('#chargeStatus').next('.layui-form-select').find('.layui-this').attr('lay-value'))
        }
        getList(mydata);
        utils.pages(total, getList, mydata);
    }
    //初始化
    initList(10);

    //搜索

    form.on('submit(search)', function(data) {
        utils._loading(function() {
            data && initList(10);
        });
        return false;
    });

    //导出到excel
    function table2excel() {
        utils.toExcel("#table", '订单信息', -1, initList);
    }
    //关闭订单
    function closeOrder(idVal) {
        utils._confirm('确定关闭订单?', function(index) {
            $.ajax({
                    async: true,
                    url: ajaxUrl + '/order/closeOrder?orderId=' + idVal,
                    type: 'POST',
                    dataType: 'json',
                    contentType: 'application/json',
                })
                .done(function(res) {
                    // console.log(res);
                    layer.closeAll();
                    if (res.result) {
                        utils._msg(res.msg, function() {
                            window.location.reload(true);
                        });
                    }
                    // switch (res.result) {
                    //     case '1000':
                    //         utils._msg(res.msg, function() {
                    //             window.location.reload(true);
                    //         });
                    //         break;
                    //     case '-1000':
                    //         utils._msg(res.msg, function() {
                    //             window.location.reload(true);
                    //         });
                    //         break;
                    //     case '1001':
                    //         utils._msg(res.msg, function() {
                    //             window.location.reload(true);
                    //         });
                    //         break;
                    //     default:
                    //         break;
                    // }
                })
                .fail(function(err) {
                    console.log(err);
                })
        });
    }

    function isCoupon(res) {
        var needPay = '';
        if (res.coupon) {
            if (res.coupon.status == 1) {
                // 直减1
                needPay = utils.fillZero(utils.fixedFloat(utils.fillZero(res.realAmount), utils.fillZero(res.coupon.amount), '+'));
            } else if (res.coupon.status == 2) {
                //打折2
                needPay = utils.fixedFloat(utils.fillZero(res.realAmount), utils.fillZero(res.coupon.amount), '/').toFixed(2);
            }
        } else {
            //暂无优惠券
            needPay = utils.fillZero(res.realAmount);
        }
        return needPay;
    }
    </script>
</body>

</html>